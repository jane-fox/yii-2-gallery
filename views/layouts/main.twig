{{ use('yii/web/JqueryAsset') }}
{{   void(this.beginPage()) }}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{ html.csrfMetaTags | raw }}
    <title>Site Title :: {{page_title}}</title>
	<meta charset="UTF-8" />
	<meta name="language" content="en" />
	<meta name="description" content="">
	<meta name="author" content="some fox">
	<meta name="keywords" content="">
	{{ register_asset_bundle('app/assets/AppAsset') }}
	{{ register_jquery_asset() }}
	<link rel="icon" href="{{app.params.basePath}}/favicon.ico">
	{{   void(this.head) }}
	<link rel="stylesheet" type="text/css" href="{{app.params.basePath}}/css/bootstrap-theme.min.css" />
	<link rel="stylesheet" type="text/css" href="{{app.params.basePath}}/css/bootstrap.min.css" />
	<link rel="stylesheet" type="text/css" href="{{app.params.basePath}}/css/video-js.min.css" />
	<link rel="stylesheet" type="text/css" href="{{app.params.basePath}}/css/dropzone.css" />
	<link rel="stylesheet" type="text/css" href="{{app.params.basePath}}/css/master.css" />
	 
</head>

<body>
{{   void(this.beginBody()) }}




<div id="underlay"></div>

<div class="container" id="site-wrapper">

	<header id="site-header" class="row clearfix">

		<h1 id="site-logo"><a href="{{app.params.basePath}}/">Website Title</a></h1>
		<nav id="account-nav">

			{% if app.user.isGuest %}
				<a href="{{app.params.basePath}}/login">Log In</a>
				<a href="{{app.params.basePath}}/register">Sign Up</a>
			{% else %}
				<a href="{{app.params.basePath}}/upload">Upload</a>
				<a href="{{app.params.basePath}}/user/logout" data-method="post">Log Out</a>
			{% endif %}
		</nav>
		
		<nav id="site-nav">
			<a href="{{app.params.basePath}}/post/all" {% if app.controller.action.id=="all" %}class="active" {% endif %}>All</a>
			<a href="{{app.params.basePath}}/post/videos" {% if app.controller.action.id=="videos" %}class="active" {% endif %}>Vid</a>
			<a href="{{app.params.basePath}}/post/pictures" {% if app.controller.action.id=="pictures" %}class="active" {% endif %}>Pic</a>

		</nav>

	</header>

	<!--[if lt IE 9]>
		<p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/" target="_blank">upgrade your browser</a> to improve your experience.</p>
	<![endif]-->

	<div id="main-content">
		{% include "@app/views/alert.twig" %}
		{% block content %}{% endblock %}
	</div>

<div class="clearfix"></div>
<footer id="site-footer" class="row">
	<p><a href="#">Home</a></p>
</footer>
</div>

<script type="text/javascript" src="{{app.params.basePath}}/js/lib/jquery.min.js"></script>
<script type="text/javascript" src="{{app.params.basePath}}/js/lib/lodash.min.js"></script>
<script type="text/javascript" src="{{app.params.basePath}}/js/lib/backbone.min.js"></script>
<script type="text/javascript" src="{{app.params.basePath}}/js/lib/dropzone.js"></script>
<script type="text/javascript" src="{{app.params.basePath}}/js/lib/bootstrap.min.js"></script>
<script type="text/javascript" src="{{app.params.basePath}}/js/lib/handlebars.min.js"></script>
<script type="text/javascript" src="{{app.params.basePath}}/js/lib/video.min.js"></script>
<script type="text/javascript" src="{{app.params.basePath}}/js/tag_picker.js"></script>

{% block js %}{% endblock %}
{{   void(this.endBody()) }}
</body>
</html>
 {{   void(this.endPage()) }}